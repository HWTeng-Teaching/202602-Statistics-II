import numpy as np
import matplotlib.pyplot as plt
from scipy.stats import norm

# 參數設定
lam = 1
n = 50
num_sim = 10000

# 產生樣本
samples = np.random.exponential(1/lam, (num_sim, n))
sample_means = samples.mean(axis=1)

# 標準化
mu = 1/lam
sigma = 1/lam
Z = (sample_means - mu) / (sigma/np.sqrt(n))

# 畫圖
x = np.linspace(-4, 4, 200)
plt.hist(Z, bins=50, density=True, alpha=0.6)
plt.plot(x, norm.pdf(x), 'r', linewidth=2)
plt.title("CLT - Exponential Distribution")
plt.show()
