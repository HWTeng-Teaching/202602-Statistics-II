import numpy as np
import matplotlib.pyplot as plt

# 1. Setup parameters
n = 50          # Sample size (the 'N' in CLT)
trials = 10000  # Number of times we calculate a mean

# 2. Generate Sample Means
# Bernoulli (p=0.5): Discrete 0s and 1s
bernoulli_means = [np.mean(np.random.binomial(1, 0.5, n)) for _ in range(trials)]

# Exponential (scale=1.0): Continuous and skewed
exp_means = [np.mean(np.random.exponential(1.0, n)) for _ in range(trials)]

# 3. Plotting
plt.figure(figsize=(10, 4))

plt.subplot(1, 2, 1)
plt.hist(bernoulli_means, bins=30, color='skyblue', edgecolor='black')
plt.title(f'Bernoulli Means (n={n})')

plt.subplot(1, 2, 2)
plt.hist(exp_means, bins=30, color='salmon', edgecolor='black')
plt.title(f'Exponential Means (n={n})')

plt.tight_layout()
plt.show()
